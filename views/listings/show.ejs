<% layout("/layouts/boilerplate") %>

    <body>
        <div class="col-7 mx-auto">

            <div class="card listing-card">

                <h1>
                    <%= listings.title %>
                </h1>

                <div class="card mb-2" style="width: 70rem ; height:30rem;">
                    <img src="<%=listings.image.url%>" class="card-img-topp show-img" alt="Listing Image">
                </div>

                <div class="card-body">
                    <p class="card-text" style="margin-bottom: 20px;">
                       <b>Owned by <i>
                            <%= listings.owner.username %> </b>
                        </i> <br><br>
                        Description : <%= listings.description %> <br>
                            Price : &#8377;<%= listings.price.toLocaleString("en-IN") %> <br>
                                Location : <%= listings.location %> <br>
                                    Country : <%= listings.country %>
                    </p>

                    <% if(currUser && currUser._id.equals(listings.owner._id)) { %>
                        <div style="display: flex; justify-content:space-between;">

                            <form method="get" action="/listings/<%=listings._id%>/edit">
                                <button class="btn btn-primary">Edit </button>
                            </form>

                            <form method="post" action="/listings/<%=listings._id%>/delete?_method=delete">
                                <button class="btn btn-outline-danger"> Delete Current Listing </button>
                            </form>
                        </div>
                        <%}%>

                </div>
            </div>
        </div>

        <!-- Creating Reviews Block -->

        <div class="col-7 mx-auto">
            <% if(currUser) { %>
                <hr>
                <h4><u> Leave a Review </u></h4>

                <form action="/listings/<%=listings._id%>/reviews" method="POST" novalidate class="needs-validation">
                    <br>

                    <div style="display: flex; justify-content:space-between; ">
                        <div>
                            <label for="no-rate">Rating :</label> <br><br>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>

                        <div>
                            <label for="comment" class="form-label">Comments:</label>
                            <textarea name="review[comment]" id="comment" rows="3" style="width:700px;"
                                class="form-control" required></textarea>
                            <div class="invalid-feedback">Please add comments for review</div>
                        </div>

                    </div>

                    <br>
                    <button class="btn btn-outline-dark">Submit</button>

                </form> <br>
                <%}%>

                    <!-- Showing past created Reviews on same page  -->

                    <% if(! listings.reviews.length==0) { %> <hr>
                        <h4><u> All Reviews </u></h4>

                        <div class="row">

                            <% for(review of listings.reviews) { %><br>
                                <div class="card col-3 mt-3 ms-5">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            @<%= review.author.username %>
                                        </h5>
                                        <p class="card-text"> Comment: <%= review.comment %>.<br>
                                                Rating: <% for(let i=0;i < review.rating ; i++) { %> &#11088 <% } %>
                                        </p>

                                        <form method="POST"
                                            action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=delete">
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                        </form>
                                    </div>
                                </div>

                                <% } %>
                        </div>
                        <% } %>

        </div>
    </body>